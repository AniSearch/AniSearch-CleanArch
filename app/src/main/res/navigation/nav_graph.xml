<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/animeFragment">

    <fragment
        android:id="@id/animeFragment"
        android:name="dev.redfox.anisearchclean.presentation.fragments.animeFragment"
        android:label="fragment_anime"
        tools:layout="@layout/fragment_anime" >
        <action
            android:id="@+id/action_animeFragment_to_mangaFragment"
            app:destination="@id/mangaFragment" />
        <action
            android:id="@+id/action_animeFragment_to_favouritesFragment"
            app:destination="@id/favouritesFragment" />
    </fragment>
    <fragment
        android:id="@id/mangaFragment"
        android:name="dev.redfox.anisearchclean.presentation.fragments.mangaFragment"
        android:label="fragment_manga"
        tools:layout="@layout/fragment_manga" >
        <action
            android:id="@+id/action_mangaFragment_to_favouritesFragment"
            app:destination="@id/favouritesFragment" />
        <action
            android:id="@+id/action_mangaFragment_to_animeFragment"
            app:destination="@id/animeFragment" />
    </fragment>
    <fragment
        android:id="@id/favouritesFragment"
        android:name="dev.redfox.anisearchclean.presentation.fragments.favouritesFragment"
        android:label="fragment_favourites"
        tools:layout="@layout/fragment_favourites" >
        <action
            android:id="@+id/action_favouritesFragment_to_animeFragment"
            app:destination="@id/animeFragment" />
    </fragment>
</navigation>